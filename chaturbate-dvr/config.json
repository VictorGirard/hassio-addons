{
  "name": "Chaturbate DVR",
  "version": "0.0.1",
  "slug": "chaturbate-dvr",
  "description": "Auto records Chaturbate streams when they go online",
  "url": "https://github.com/teacat/chaturbate-dvr",
  "arch": ["aarch64", "amd64", "armv7"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "timeout": 60,
  "icon": "icon.png",
  "ingress": false,
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Web interface port"
  },
  "webui": "http://[HOST]:[PORT:8080]/",
  "map": ["share:rw", "config:rw", "media:rw"],
  "host_network": false,
  "options": {
    "pattern": "/media/ELEMENTS/ctb/{{.Username}}/{{.Year}}-{{.Month}}-{{.Day}}_{{.Hour}}-{{.Minute}}-{{.Second}}_{{.Sequence}}",
    "username": "",
    "output_dir": "/usr/src/app/videos",
    "config_dir": "/usr/src/app/conf"
  },
  "schema": {
    "pattern": "str?",
    "username": "str?",
    "output_dir": "str?",
    "config_dir": "str?"
  },
  "image": "yamiodymel/chaturbate-dvr"
}
